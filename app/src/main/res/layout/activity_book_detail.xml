<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@id/error_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.itbooks.app.BookDetailActivity">

    <com.itbooks.views.AdjustViewBoundsImageView
        android:id="@+id/detail_thumb_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/parent_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/detail_head_height" />


                <com.itbooks.views.RevealLayout
                    android:id="@+id/child_head_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/blue_grey_600_90">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin">

                        <TextView
                            android:id="@+id/detail_title_tv"
                            style="@style/BookDetailTitleStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/lbl_title"
                            android:textColor="@color/common_white" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|end"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/common_padding"
                                android:text="@string/lbl_by"
                                android:textColor="@color/common_white"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/detail_author_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/lbl_author"
                                android:textColor="@color/common_white" />
                        </LinearLayout>

                    </FrameLayout>

                    <com.gc.materialdesign.views.ProgressBarIndeterminate
                        android:id="@+id/loading_pb"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:background="@color/red"
                        android:visibility="gone" />

                </com.itbooks.views.RevealLayout>


                <android.support.v4.widget.NestedScrollView
                    android:id="@+id/child_sv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/common_white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin">

                            <TextView
                                style="@style/BookDetailStyle.Property"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/lbl_description" />

                            <TextView
                                android:id="@+id/detail_description_tv"
                                style="@style/BookDetailStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/lbl_description" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin">


                            <TextView
                                style="@style/BookDetailStyle.Property"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/lbl_isbn" />

                            <TextView
                                android:id="@+id/detail_isbn_tv"
                                style="@style/BookDetailStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/lbl_isbn" />

                            <TextView
                                style="@style/BookDetailStyle.Property"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/lbl_year" />

                            <TextView
                                android:id="@+id/detail_year_tv"
                                style="@style/BookDetailStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/lbl_year" />

                            <TextView
                                style="@style/BookDetailStyle.Property"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/lbl_publisher" />

                            <TextView
                                android:id="@+id/detail_publisher_tv"
                                style="@style/BookDetailStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/lbl_publisher" />


                            <TextView
                                style="@style/BookDetailStyle.Property"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/lbl_page" />

                            <TextView
                                android:id="@+id/detail_page_tv"
                                style="@style/BookDetailStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/lbl_page" />
                        </LinearLayout>

                        <android.support.v4.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="50dp" />
                    </LinearLayout>
                </android.support.v4.widget.NestedScrollView>
            </LinearLayout>

            <com.gc.materialdesign.views.ButtonFloat
                android:id="@+id/download_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="24dp"
                android:layout_marginTop="200dp"
                android:background="#8BC34A"
                app:animate="true"
                app:iconDrawable="@drawable/ic_download" />
        </FrameLayout>
    </android.support.v4.widget.NestedScrollView>


</FrameLayout>