<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.itbooks.app.MainActivity">


    <FrameLayout
        android:id="@id/error_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/content_srl"
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.github.ksoichiro.android.observablescrollview.ObservableListView
                android:id="@+id/books_lv"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:divider="@null"
                android:background="@color/common_transparent"
                android:cacheColorHint="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </android.support.v4.widget.SwipeRefreshLayout>

    </FrameLayout>


    <com.chopping.utils.views.OneDirectionScrollView
        android:layout_width="250dp"
        android:layout_gravity="left"
        android:scrollbars="none"
        android:background="@android:color/white"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/drawer_menu_ll"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/open_bookmarks_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/selector_bg2_btn">

                <ImageView
                    android:layout_width="@dimen/float_button_size"
                    android:layout_height="@dimen/float_button_size"
                    android:background="@color/common_transparent"
                    android:src="@drawable/ic_bookmarks" />


                <com.itbooks.views.FontTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    font="thin"
                    android:gravity="center"
                    android:textColor="@color/text_common_black"
                    android:text="@string/lbl_bookmark"
                    android:background="@drawable/selector_bg2_btn" />
            </LinearLayout>


            <FrameLayout
                android:id="@+id/app_list_fl"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </com.chopping.utils.views.OneDirectionScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/grey_500">

        <fragment
            android:name="com.itbooks.app.fragments.BookmarkListFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal" />

    </FrameLayout>
</android.support.v4.widget.DrawerLayout>
